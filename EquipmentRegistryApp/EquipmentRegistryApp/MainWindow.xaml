<Window x:Class="EquipmentRegistryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реестр оборудования" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Форма для ввода/редактирования -->
        <GroupBox Grid.Row="0" Header="Данные оборудования" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock Text="Название:"/>
                <TextBox x:Name="txtName" Margin="0,0,0,5"/>
                <TextBlock Text="Год изготовления:"/>
                <TextBox x:Name="txtYear" Margin="0,0,0,5"/>
                <TextBlock Text="Стоимость:"/>
                <TextBox x:Name="txtCost" Margin="0,0,0,5"/>
                <TextBlock Text="Организация:"/>
                <ComboBox x:Name="cmbOrganization" DisplayMemberPath="OrgName" Margin="0,0,0,5"/>
                <TextBlock Text="Тип:"/>
                <ComboBox x:Name="cmbType" DisplayMemberPath="TypeName" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="btnAdd" Content="Добавить" Width="100" Margin="0,0,5,0" Click="BtnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Изменить" Width="100" Margin="0,0,5,0" Click="BtnUpdate_Click"/>
                    <Button x:Name="btnDelete" Content="Удалить" Width="100" Margin="0,0,5,0" Click="BtnDelete_Click"/>
                    <Button x:Name="btnRefresh" Content="Обновить" Width="100" Click="BtnRefresh_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Таблица с данными -->
        <DataGrid x:Name="dgEquipment" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DgEquipment_SelectionChanged">
            <DataGrid.Resources>
                <!-- Стиль для центрирования содержимого ячеек -->
                <Style x:Key="CenteredCellStyle" TargetType="{x:Type TextBlock}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <!-- Стиль для выравнивания содержимого ячеек по правому краю -->
                <Style x:Key="RightAlignedCellStyle" TargetType="{x:Type TextBlock}">
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <!-- Стиль для выравнивания содержимого ячеек по левому краю -->
                <Style x:Key="LeftAlignedCellStyle" TargetType="{x:Type TextBlock}">
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <!-- Стиль для центрирования заголовков -->
                <Style x:Key="CenteredHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <!-- ID: Центрировать -->
                <DataGridTextColumn Header="ID" Binding="{Binding EquipId}" Width="50" 
                                   ElementStyle="{StaticResource CenteredCellStyle}" 
                                   HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                <!-- Название: Выровнять по левому краю -->
                <DataGridTextColumn Header="Название" Binding="{Binding EquipName}" Width="*" 
                                   ElementStyle="{StaticResource LeftAlignedCellStyle}" 
                                   HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                <!-- Год: Центрировать -->
                <DataGridTextColumn Header="Год" Binding="{Binding ManufactureYear}" Width="80" 
                                   ElementStyle="{StaticResource CenteredCellStyle}" 
                                   HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                <!-- Стоимость: Выровнять по правому краю -->
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}" Width="120" 
                                   ElementStyle="{StaticResource RightAlignedCellStyle}" 
                                   HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                <!-- Организация: Выровнять по левому краю -->
                <DataGridTextColumn Header="Организация" Binding="{Binding Organization.OrgName}" Width="190" 
                                   ElementStyle="{StaticResource LeftAlignedCellStyle}" 
                                   HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                <!-- Тип: Выровнять по левому краю -->
                <DataGridTextColumn Header="Тип" Binding="{Binding Type.TypeName}" Width="190" 
                                   ElementStyle="{StaticResource LeftAlignedCellStyle}" 
                                   HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <TextBlock x:Name="txtStatus" Grid.Row="2" Foreground="Red" Margin="0,10,0,0"/>
    </Grid>
</Window>