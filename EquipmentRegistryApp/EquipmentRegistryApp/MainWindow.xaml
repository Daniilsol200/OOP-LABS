<Window x:Class="EquipmentRegistryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реестр оборудования" Height="600" Width="1000">
    <Window.Resources>
        <!-- Стиль для центрирования содержимого ячеек -->
        <Style x:Key="CenteredCellStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- Стиль для выравнивания содержимого ячеек по правому краю -->
        <Style x:Key="RightAlignedCellStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- Стиль для выравнивания содержимого ячеек по левому краю -->
        <Style x:Key="LeftAlignedCellStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- Стиль для центрирования заголовков -->
        <Style x:Key="CenteredHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для меню -->
            <RowDefinition Height="Auto"/>
            <!-- Для формы -->
            <RowDefinition Height="*"/>
            <!-- Для таблицы -->
            <RowDefinition Height="Auto"/>
            <!-- Для статусной строки -->
        </Grid.RowDefinitions>

        <!-- Меню для выбора таблицы -->
        <Menu Grid.Row="0" Margin="0,0,0,10">
            <MenuItem Header="_Таблицы">
                <MenuItem x:Name="menuEquipment" Header="Оборудование" Click="MenuEquipment_Click" IsChecked="True"/>
                <MenuItem x:Name="menuOrganization" Header="Организации" Click="MenuOrganization_Click"/>
                <MenuItem x:Name="menuType" Header="Типы оборудования" Click="MenuType_Click"/>
            </MenuItem>
        </Menu>

        <!-- Форма для ввода/редактирования -->
        <GroupBox Grid.Row="1" x:Name="groupBoxForm" Header="Данные" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <!-- Форма для оборудования -->
                <StackPanel x:Name="equipmentForm" Visibility="Visible">
                    <TextBlock Text="Название:"/>
                    <TextBox x:Name="txtName" Margin="0,0,0,5"/>
                    <TextBlock Text="Год изготовления:"/>
                    <TextBox x:Name="txtYear" Margin="0,0,0,5"/>
                    <TextBlock Text="Стоимость:"/>
                    <TextBox x:Name="txtCost" Margin="0,0,0,5"/>
                    <TextBlock Text="Организация:"/>
                    <ComboBox x:Name="cmbOrganization" DisplayMemberPath="OrgName" Margin="0,0,0,5"/>
                    <TextBlock Text="Тип:"/>
                    <ComboBox x:Name="cmbType" DisplayMemberPath="TypeName" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Форма для организаций -->
                <StackPanel x:Name="organizationForm" Visibility="Collapsed">
                    <TextBlock Text="Название организации:"/>
                    <TextBox x:Name="txtOrgName" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Форма для типов оборудования -->
                <StackPanel x:Name="typeForm" Visibility="Collapsed">
                    <TextBlock Text="Название типа:"/>
                    <TextBox x:Name="txtTypeName" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="btnAdd" Content="Добавить" Width="100" Margin="0,0,5,0" Click="BtnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Изменить" Width="100" Margin="0,0,5,0" Click="BtnUpdate_Click"/>
                    <Button x:Name="btnDelete" Content="Удалить" Width="100" Margin="0,0,5,0" Click="BtnDelete_Click"/>
                    <Button x:Name="btnRefresh" Content="Обновить" Width="100" Click="BtnRefresh_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Таблица с данными -->
        <DataGrid x:Name="dgEquipment" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DgEquipment_SelectionChanged">
            <DataGrid.Columns>
                <!-- Столбцы будут задаваться динамически в коде -->
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <TextBlock x:Name="txtStatus" Grid.Row="3" Foreground="Red" Margin="0,10,0,0"/>
    </Grid>
</Window>