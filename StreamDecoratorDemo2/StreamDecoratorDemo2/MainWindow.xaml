<Window x:Class="StreamDecoratorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stream Decorator Demo" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="StreamTypeComboBox" Width="150" Margin="0,0,10,0">
                <ComboBoxItem>FileStream</ComboBoxItem>
                <ComboBoxItem>MemoryStream</ComboBoxItem>
                <ComboBoxItem>BufferedStream</ComboBoxItem>
            </ComboBox>
            <TextBox x:Name="TimeoutTextBox" Width="100" Margin="0,0,10,0" Text="5"/>
            <Button Content="Start Writing" Click="StartWriting_Click"/>
        </StackPanel>

        <TextBox x:Name="OutputTextBox" Grid.Row="1" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

        <Button Grid.Row="2" Content="Clear" Click="Clear_Click" HorizontalAlignment="Right" Margin="0,10,0,0"/>
    </Grid>
</Window>